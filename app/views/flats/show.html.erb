<%= link_to "go back", flats_path, class:"button-black-yellow" %>
<div class="card-show">
  <div class="card-show-infos">
    <div class="flat-title">
      <%= @flat.name %>
    </div>
      <div class="infos-show-flats">
        <div>
          📍<%= @flat.address %>
        </div>
        <div>
          💲<%= @flat.price %>
        </div>
        <div>
          🏠<%= @flat.text %>
        </div>
      </div>
  </div>
</div>
    <div class="shows-buttons">
      <%= link_to "update", edit_flat_path, class:"button-black-yellow" %>
      <%= link_to "Book",  new_flat_booking_path(@flat), class:"button-black-yellow" %>
      <%= link_to "delete", flat_path, class:"button-black-yellow", data: {turbo_method: :delete, turbo_confirm:"Are you sure?"} %>
    </div>
  <div class="bookings-cancel">
    <p class="title-already-book">Already booked on:</p>
    <% @flat.bookings.each do |booking| %>
      <div class="booking-infos">
        <strong>from</strong><%= booking.check_in %><strong>until</strong> <%= booking.check_out %>
        <div class="button-cancel">
          <%= link_to "cancel booking", booking_path(booking), class:"button-black-yellow", data: {turbo_method: :delete, turbo_confirm:"Are you sure ?"}%>
        </div>
      </div>
    <% end %>
  </div>
